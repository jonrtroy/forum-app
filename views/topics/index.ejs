<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Football Forum</title>

    <link rel="stylesheet" href="/style.css">

    <script src="https://use.fontawesome.com/bcfbf51388.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

    <script src="/main.js"></script>

  </head>
  <body>
    <div id="container">
      <header id="header-title">
        <h1>Football Forum</h1>
        <a href="/topic/new">
          <input id="button" type="submit" value="Add New Topic">
        </a>
      </header>
      <section>
        <% topics.forEach((topic) => { %>
          <div id="topic-container">
            <a href="/topic/<%= topic.id %>">
              <h2><%= topic.title %></h2>
            </a>
              <div class="comments-likes-container">
                <p><i class="fa fa-comments" aria-hidden="true"></i> <%= topic.comments_number %></p>
                <p><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> <%= topic.likes %></p>
              </div>
                  <form action="/topic/<%= topic.id %>/topicLikes?_method=PUT" method="POST">
                    <input id="button" type="submit" value="LIKE">
                  </form>
            </div>
          </div>
        <% }) %>
      </section>
    </div>
  </body>
</html>
