<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Topics</title>
  </head>
  <body>
    <main>
      <header>
        <h1>Forum topics</h1>
      </header>
      <section>
        <a href="/topic/new">ADD TOPIC</a>
        <% topics.forEach((topic) => { %>
          <div class="topic-container">
            <a href="/topic/<%= topic.id %>">
            <h2>Title: <%= topic.title %></h2>
            </a>
            <h2>Content: <%= topic.content %></h2>
            <h2>User Name: <%= topic.username %></h2>
            <p>LIKES: <%= topic.likes %></p>
            <form action="/topic/<%= topic.id %>/like?_method=PUT" method="POST">
              <input type="submit" value="LIKE">
            </form>
          </div>
        <% }); %>
      </section>
    </main>
  </body>
</html>
